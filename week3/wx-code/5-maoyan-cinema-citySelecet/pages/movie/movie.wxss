/* pages/movie/movie.wxss */

.top{
  display: flex;
  height: 120rpx;
  border-bottom: 1px solid #ddd;
  text-align: center;
  line-height: 120rpx;
  justify-content: space-around;

  position: relative;
}

.select-box{
  display: flex;
}
.select-box-item{
  padding-left: 5px;
}

.select-box::after {
    content: "";
    display: block;
    position: absolute;
    bottom: -1px;
    
    width: 160rpx;
    height: 2px;
    background-color: #ef4238;
    -webkit-transition: left .2s;
    transition: left .2s;
}
.coming::after{
  left: 380rpx;
}

.movie-item{
  height: 240rpx;
  /* line-height: 200rpx; */
  padding-left: 10rpx;
  border-bottom: 1px solid #ddd;
}

.subpage{
  position: absolute;
  width: 100%;
  top: 120rpx;
  bottom: 0;
  overflow-y: scroll;
}
.subpage::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.mostExperted-list{
  width: 100%;
  height: 400rpx;
  display: flex;
  overflow-x: scroll;
  white-space: nowrap;
  /* visibility: hidden */
}


.mostExperted-list::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.mostExperted-item{
  width: 300rpx;
  height: 400rpx;
  box-sizing: border-box;
  border: 1px solid #ddd;
}


.movie-item{
  display: flex;

  position: relative;
}

.item-img{
  width: 128rpx;
  height: 180rpx;
  margin: 30rpx 30rpx 10rpx 10rpx;
}

.item-right{
  font-size: 14px;
  margin-top: 30rpx;
}

.buy-button{
  position: absolute;
  width: 140rpx;
  height: 60rpx;
  top: 100rpx;
  right: 30rpx;
  font-size: 12px;
}

.item-right view{
  width: 380rpx;
}
.line-ellipsis {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.normal{
  color:white;
  background-color: #f03d37;
}
/* 预售 */
.pre {
  color:white;
  background-color: #3c9fe6;
}
.toggle-wish-button{
  color:white;
  background-color: #faaf00;
}
