/* pages/citySelect/citySelect.wxss */

.page {
  background-color: #ebebeb;
  position: absolute;
  width: 100%;
  top: 0;
  bottom: 0;
}

.scroll-view {
  width: 100%;
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.section-title {
  height: 30px;
  padding-left: 15px;
  line-height: 30px;
}

.section-list {
  background-color: #f5f5f5;
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 15px;
}

.location-item {
  height: 31px;
  margin-left: 15px;
  color: #333;
  background: #fff;
  margin-top: 15px;
  border: 1px solid #e6e6e6;
  font-size: 14px;
  line-height: 31px;
  padding: 0 20px;
  /* text-align: center; */
}

.hot-item {
  height: 31px;
  width: 20%;
  margin-left: 15px;
  color: #333;
  background: #fff;
  margin-top: 15px;
  border: 1px solid #e6e6e6;
  font-size: 14px;
  line-height: 31px;
  padding: 0 10px;
  text-align: center;
}

.list {
  display: block;
}

.plain-item {
  width: 90%;
  height: 44px;
  line-height: 44px;
  margin-left: 15px;
  border-bottom: 1px solid #c8c7cc;
}

.nav{
  position: fixed;
    top: 35px;
    right: 0;
    width: 35px;
    z-index: 10;
    text-align: center;
    font-size: 12px;
}

.nav>view{
  box-sizing: border-box;
  font-size: 12px;
}
