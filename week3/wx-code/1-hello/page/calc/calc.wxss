/* page/calc/calc.wxss */
.info{
	width: 750rpx;
	height: 260rpx;
	background-color: black;
	color: white;
	font-size: 36px;
	text-align: right;
	box-sizing: border-box;
	padding-top: 140rpx;
	padding-right: 20rpx;
}
.control{
	display: flex;
	flex-wrap: wrap;
}
.btn{
	width: 25%;
	height: 140rpx;
	line-height: 140rpx;
	border-radius: 0;
	box-sizing: border-box;
	border: 1px solid #CCCCCC;
}
.zero{
	width: 50%;
}
.operate{
	color: white;
	background-color: orange;
}
.btn::after{
	border: none;
	border-radius: 0;
}