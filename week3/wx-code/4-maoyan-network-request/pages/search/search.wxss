/* pages/search/search.wxss */

.input-box{
  display: flex;
  border-bottom: 1px solid #777;
  padding: 20rpx;
}
.input-box input{
  border: 1px solid #ccc;
}



.movie-item{
  display: flex;

  position: relative;
}

.item-img{
  width: 128rpx;
  height: 180rpx;
  margin: 30rpx 30rpx 10rpx 10rpx;
}

.item-right{
  font-size: 14px;
  margin-top: 30rpx;
}

.buy-button{
  position: absolute;
  width: 140rpx;
  height: 60rpx;
  top: 100rpx;
  right: 30rpx;
  font-size: 12px;
}

.item-right view{
  width: 380rpx;
}
.line-ellipsis {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.normal{
  color:white;
  background-color: #f03d37;
}
/* 预售 */
.pre {
  color:white;
  background-color: #3c9fe6;
}
.toggle-wish-button{
  color:white;
  background-color: #faaf00;
}